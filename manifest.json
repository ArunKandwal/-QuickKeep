{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0",
  "description": "Take and manage notes with auto-expiry after 30 days.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    
    "128": "icons/icon128.png"
  }
}
